<?xml version="1.0" encoding="UTF-8"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <artifactId>parent.twelve.1200</artifactId>
    <groupId>org.jetbrains.idea</groupId>
    <version>12.0.0</version>
    <relativePath>../../pom.xml</relativePath>
  </parent>
  <groupId>org.jetbrains.idea</groupId>
  <artifactId>jps-model</artifactId>

  <name>Maven module for jps-model</name>
  <description>Maven integration for module jps-model</description>

  <profiles>
    <profile>
      <id>intellij-12</id>
      <activation>
        <property>
          <name>IntelliJ</name>
          <value>12</value>
        </property>
      </activation>
      <dependencies>
        <dependency>
          <groupId>org.jetbrains.thirdparthy</groupId>
          <artifactId>asm4-all</artifactId>
        </dependency>
        <dependency>
          <groupId>org.jetbrains.idea</groupId>
          <artifactId>jps-model-api</artifactId>
        </dependency>
        <dependency>
          <groupId>org.jetbrains.idea</groupId>
          <artifactId>jps-model-impl</artifactId>
        </dependency>
      </dependencies>
    </profile>
  </profiles>

  <build>
    <sourceDirectory>${idea.home}/jps/model/src</sourceDirectory>
    <resources>
      <resource>
        <directory>${idea.home}/jps/model/src</directory>
        <excludes>
          <exclude>**/*.java</exclude>
          <exclude>**/*.groovy</exclude>
        </excludes>
      </resource>
    </resources>
    <plugins>
      <plugin>
        <groupId>org.codehaus.gmaven</groupId>
        <artifactId>gmaven-plugin</artifactId>
        <executions>
          <execution>
            <goals>
              <goal>generateStubs</goal>
            </goals>
            <configuration>
              <sources>
                <fileset>
                  <directory>${idea.home}/jps/model/src</directory>
                  <includes>
                    <include>**/*.groovy</include>
                  </includes>
                </fileset>
              </sources>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

  <dependencies>
    <dependency>
      <groupId>org.jetbrains.idea</groupId>
      <artifactId>util</artifactId>
    </dependency>
    <dependency>
      <groupId>org.codehaus.groovy</groupId>
      <artifactId>groovy-all</artifactId>
    </dependency>
    <dependency>
      <groupId>asm</groupId>
      <artifactId>asm</artifactId>
    </dependency>
    <dependency>
      <groupId>asm</groupId>
      <artifactId>asm-commons</artifactId>
    </dependency>
  </dependencies>
</project>
