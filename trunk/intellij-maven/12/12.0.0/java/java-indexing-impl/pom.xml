<?xml version="1.0" encoding="UTF-8"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <artifactId>parent.twelve.1200</artifactId>
    <groupId>org.jetbrains.idea</groupId>
    <version>12.0.0</version>
    <relativePath>../../pom.xml</relativePath>
  </parent>
  <groupId>org.jetbrains.idea</groupId>
  <artifactId>java-indexing-impl</artifactId>

  <name>Maven module for java-indexing-impl</name>
  <description>Maven integration for module java-indexing-impl</description>

  <build>
    <sourceDirectory>${idea.home}/java/java-indexing-impl/src</sourceDirectory>
    <resources>
      <resource>
        <directory>${idea.home}/java/java-impl/src</directory>
        <excludes>
          <exclude>**/*.java</exclude>
          <exclude>**/*.groovy</exclude>
        </excludes>
      </resource>
    </resources>
  </build>

  <dependencies>
    <dependency>
      <groupId>org.jetbrains.idea</groupId>
      <artifactId>java-psi-api</artifactId>
    </dependency>
    <dependency>
      <groupId>org.jetbrains.idea</groupId>
      <artifactId>java-psi-impl</artifactId>
    </dependency>
    <dependency>
      <groupId>org.jetbrains.idea</groupId>
      <artifactId>indexing-api</artifactId>
    </dependency>
    <dependency>
      <groupId>org.jetbrains.idea</groupId>
      <artifactId>indexing-impl</artifactId>
    </dependency>
    <dependency>
      <groupId>org.jetbrains.idea</groupId>
      <artifactId>projectModel-api</artifactId>
    </dependency>
    <dependency>
      <groupId>org.jetbrains.idea</groupId>
      <artifactId>projectModel-impl</artifactId>
    </dependency>

  </dependencies>

  <profiles>
    <profile>
      <id>intellij-12</id>
      <activation>
        <property>
          <name>IntelliJ</name>
          <value>12</value>
        </property>
      </activation>
      <dependencies>
        <dependency>
          <groupId>org.jetbrains.idea</groupId>
          <artifactId>java-indexing-api</artifactId>
        </dependency>
      </dependencies>
    </profile>
  </profiles>

</project>
