<idea-plugin version="2">
  <id>IntelliJ Plugin Maven Importer</id>
  <name>IntelliJ Plugin Maven Importer</name>
  <description>Imports maven modules for IntelliJ Idea Plugin development</description>
  <version>0.1</version>
  <vendor url="http://code.google.com/p/intellij-maven" email="intellij-maven@plushnikov.de">Michail Plushnikov</vendor>

  <description><![CDATA[
    A plugin that helps to import maven project for IntelliJ IDEA plugin as IntelliJ modul of 'PLUGIN_MODUL' type.
    ]]>
  </description>
  <category>Tools Integration</category>
  
  <depends>DevKit</depends>
  <depends>org.jetbrains.idea.maven</depends>

  <extensions defaultExtensionNs="org.jetbrains">
    <idea.maven.importer implementation="de.plushnikov.maven.plugin.IntellijPluginMavenImporter"/>
  </extensions>

  <!-- Available since: http://youtrack.jetbrains.com/issue/IDEA-65130 -->
  <idea-version since-build="114.79"/>
  
  <change-notes><![CDATA[
		<ul>
			<li>1.0
				<ol>
					<li>Initial Release for IDEA >= 11.1</li>
				</ol>
			</li>
		</ul>
	]]>
  </change-notes>
</idea-plugin>